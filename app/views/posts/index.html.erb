<% @post.each do |p| %>
	<h4>"<%= p.text %>"<%= p.upvote %></h4> 
	<h4>Professor: <%= link_to Professor.find(p.professor_id).name, professor_path(p.professor_id) %></h4>
	<p>Posted by <%= link_to User.find(p.user_id).username, user_path(p.user_id)%></p>
	<% if current_user %>
		<% if current_user.id == p.user_id %>
	  	<%= link_to 'Edit', edit_post_path(p) %>
	  	<%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' }%>
	  <% end %>
	  <%= link_to 'Upvote', p, method: :upvote, class: "success button large hollow fa fa-arrow-circle-up fa-5x"%>
	<% else %>
		Please <%= link_to "Log In", new_user_session_path %> or <%= link_to "Create an Account", new_user_registration_path %> to upvote posts.
	<% end %>
	<p>Upvotes: <%= p.votes.count %></p>
	<hr>
<% end %>

<br>
<br>
<p><%= link_to "Add a new Post", new_post_path %></p>
<p><%= link_to 'Back to all posts.', posts_path %></p>