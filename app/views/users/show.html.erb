<p>Posts by <%= @user.username %></p>
<hr>

<% if @user.posts.count > 0 %>
	<% Post.where(user_id: params[:id]).find_each do |p| %>
		<h4><%= link_to Professor.find(p.professor_id).name, professor_path(p.professor_id) %> always says:</h4>
		<h4>"<%= p.text %>"</h4>
		<hr>
	<% end %>
<% else %>
	<h3>This user has no posts.</h3>
<% end %>